{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build And Run (asm)",
            "type": "shell",
            "command": "nasm -f elf -g -F stabs ./${input:program_name}/main.asm && ld -o ./${input:program_name}/main ./${input:program_name}/main.o -m elf_i386 && ./${input:program_name}/main",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "program_name",
            "type": "pickString",
            "options": [
                "hello_world"
            ],
            "description": "The program concerned by the command"
        }
    ]
}